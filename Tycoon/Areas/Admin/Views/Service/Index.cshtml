@model IEnumerable<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border backgroundwhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Service List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.SubCategoryId)
                    </th>
                    <th>

                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var service in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => service.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => service.Price)
                </td>
                <td>
                    @Html.DisplayFor(m => service.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => service.SubCategory.Name)
                </td>
                <td>
                    <partial name="_TableButtonsPartial" model="service.Id" />
                </td>
            </tr>

                }
            </table>

        }
        else
        {
            <p>There are no Services to display!!</p>
        }

    </div>
</div>

